<resources>

    <attr name="ratio" format="float"/>
    <attr name="title_text" format="string|reference"/>
    <declare-styleable name="CalendarView">
        <attr name="show_title" format="boolean"/>
        <attr name="title_text"/>
        <attr name="title_text_size" format="dimension"/>
        <attr name="title_text_color" format="color|reference"/>
        <attr name="show_week" format="boolean"/>
        <attr name="week_text" format="string|reference"/>
        <attr name="week_text_size" format="dimension"/>
        <attr name="week_text_color" format="color|reference"/>
        <attr name="show_divider" format="boolean"/>
        <attr name="divider_color" format="color|reference"/>
        <attr name="divider_width" format="dimension"/>
        <attr name="item_ratio" format="float"/>
    </declare-styleable>

    <declare-styleable name="RatioLinearLayout">
        <attr name="ratio"/>
    </declare-styleable>
</resources>
